<div class="mt-3">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.submit %>
</div>

  <div class="mt-3">
    <% unless f.object.new_record? %>
      <div class="checkbox">
        <label>
          <%= f.check_box :completed %> Completed
        </label>
      </div>
    <% end %>
  </div>


<% end %>
